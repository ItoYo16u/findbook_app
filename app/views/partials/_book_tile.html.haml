%a.column.is-3-desktop.card.has-text-centered{href:"/books/show/#{book.identifier}"}
  .div{style:"margin:10px;display:inline-block"}
    -if book.img_url != nil
      %img{src:"#{http2https(book.img_url)}",style:"display:block;padding:10px;max-width:150px;"}
    -else
      %img{src:"https://bulma.io/images/placeholders/64x64.png"}
  %p{style:"font-size:10px"}
    =book.title