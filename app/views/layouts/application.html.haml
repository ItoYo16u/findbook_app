!!!
%html.has-navbar-fixed-top
  %head
    %script{async:"async",src:"https://www.googletagmanager.com/gtag/js?id=UA-133451500-3"}
    %script
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-133451500-3');
    = display_meta_tags(default_meta_tags)
    %meta{charset:"UTF-8"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name:"viewport",content:"width=device-width,initial-scale=1.0"}
    %script{src:"https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.bundle.min.js",type:"text/javascript"}
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %link{rel:"stylesheet",href:"https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css"}
    %meta{name:"google-site-verification",content:"5zf5xTBZsydZsjpCyLp64CZ1eGQH-PZLkUPs4fchK2E"}

  %body
    #shutter
    #header-space
    = render :partial=> "partials/header"
    -if flash[:notice]
      .notification.is-primary{style:"width:300px;margin:auto;"}
        %button.delete
        = notice

    -if flash[:alert]
      .notification.is-danger{style:"width:300px;margin:auto;"}
        %button.delete
        =alert

    = yield
    = render partial:"partials/footer"
