-set_meta_tags title:"新規会員登録",description:"新規会員登録ページです."
.columns.is-desktop
  .column.is-4
  .column.is-4-desktop.is-12-mobile.is-12-tablet{style:"margin-top:100px"}
    .box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .fields
          .field.sign_up
            %h2.subtitle 新規会員登録
            .control
              = f.label :name,class: "label"
              %br
              = f.text_field :name, class:"input",placeholder:"名前",autofocus:true
          .field.sign_up
            .control
              = f.label :email,class:"label"
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email",class:"input",placeholder:"info@example.com"
          .field.sign_up
            .control
              = f.label :password,class:"label"
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password",class:"input"
          .field.sign_up
            .control
              = f.label :password_confirmation,class:"label"
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password",class:"input"
          .actions.has-text-centered
            = f.submit "Sign up",class:"button"
          = render "users/shared/links"
  .column.is-4