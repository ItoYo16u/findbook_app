%h1 Users#show
.columns
  .column.is-2
  .column.is-8
    %p.subtitle
      レビュー済
    -@book_list = current_user.books
    -if @book_list
    -logger.debug(@book_list.drop(0))
      -book_table=@book_list.each_slice(4).to_a
      -book_table.each do |books|
        .columns
          -books.each do |book|
            .column.is-3{style:"border:1px solid #bdbdbd;margin:3px;text-align:center"}
              .div{style:"margin:10px;display:inline-block"}
                -if book.img_url != nil
                  %img{src:"#{book.img_url}",style:"display:block;padding:10px"}
                -else
                  %img{src:"https://bulma.io/images/placeholders/64x64.png"}
              %p{style:"font-size:10px"}
                =book.title
              =link_to "details",books_show_path(identifier:book.identifier),class:"button is-light",style:"text-align:center"          
  .column.is-2
