- set_meta_tags title:"検索結果一覧",description:"#{params[:keyword]}の検索結果一覧です.#{@book_list.count()}件の書籍が見つかりました."
.columns
  .column.is-2
  .column.is-8
    #search-box.on_home{style:"margin-top:40px"}
      =form_tag(search_path, method: :get,class:"field is-grouped is-expanded") do
        %p.control.keyword_field.is-expanded
          =text_field_tag :keyword, '', id:"book_search",class:"input",placeholder:"本のタイトルを入力してください"
        %p.control.submit_field
          %button.button#searchBtn{title:"search", type:"submit"} 検索する
      %hr
    %p.subtitle
      あなたが探しているのは...
    -if @book_list
      -@book_list.select!{|target| target.identifier.present?}
      -@book_list.select!{|book| book.identifier.find{|hash| hash["type"]=="ISBN_10" or hash["type"] =="ISBN_13" }  }
      -book_table=@book_list.each_slice(4).to_a
      -book_table.each do |books|
        .columns.is-desktop
          -books.each do |book|
            %a.column.is-3-desktop.card{href:"/books/show/#{book.identifier[0]["identifier"]}?type=#{book.identifier[0]["type"]}",style:"border:1px solid #bdbdbd;margin:3px;text-align:center"}
              .div{style:"margin:10px;display:inline-block"}
                -if book.image_url != nil
                  %img{src:"#{book.image_url["thumbnail"]}",style:"display:block;padding:10px;height:320px"}
                -else
                  %img{src:"https://bulma.io/images/placeholders/64x64.png"}
              %p{style:"font-size:10px"}
                =book.title
  .column.is-2
   